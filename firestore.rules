rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === Helper functions ===
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return /databases/$(database)/documents/users/$(request.auth.uid);
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(userDoc()) &&
        get(userDoc()).data.role == "admin";
    }

    function isCompany() {
      return isSignedIn() &&
        exists(userDoc()) &&
        get(userDoc()).data.role == "company";
    }

    function isCustomer() {
      return isSignedIn() &&
        exists(userDoc()) &&
        get(userDoc()).data.role == "customer";
    }

    // === USERS ===
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update, delete: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
    }

    // === COMPANIES ===
    match /companies/{companyId} {
      allow read: if isSignedIn();
      allow write, delete: if isAdmin() || request.auth.uid == companyId;
      allow list: if isAdmin();
    }

    // === REQUESTS ===
    match /requests/{reqId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || resource.data.userId == request.auth.uid;
      allow list: if isAdmin();
    }

    // === PAYMENTS ===
    match /payments/{paymentId} {
      allow read, write: if isAdmin() || resource.data.userId == request.auth.uid;
      allow list: if isAdmin();
    }

    // === ACTIVITY ===
    match /activity/{logId} {
      allow read, write: if isAdmin();
      allow list: if isAdmin();
    }

    // === MESSAGES ===
    match /messages/{msgId} {
      allow read, write: if isAdmin() || resource.data.userId == request.auth.uid;
      allow list: if isAdmin();
    }

    // === DRAFTS ===
    match /drafts/{draftId} {
      allow read, write, delete: if request.auth.uid == draftId || isAdmin();
    }

    // === Default deny ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
